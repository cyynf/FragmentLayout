<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cpf.fragment.layout.FragmentLayout
        android:id="@+id/fragmentLayout"
        android:name="cpf.fragment.demo.SingleFragment1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:autoLoad="true" />

    <cpf.fragment.layout.FragmentLayout
        android:id="@+id/lazyFragmentLayout"
        android:name="cpf.fragment.demo.SingleFragment1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:animateLayoutChanges="true"
        app:autoLoad="true"
        app:delayDuration="1000" />

    <Button
        android:id="@+id/lazyLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="lazyLoad"
        android:text="lazyLoad"
        android:textAllCaps="false" />

</LinearLayout>